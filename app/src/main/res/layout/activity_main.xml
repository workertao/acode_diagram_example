<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="com.acode.diagramline.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cffffff"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="滚动折线图" />

            <com.acode.diagram.DiagramHorizerScrollView
                android:id="@+id/diagramHSView"
                android:layout_width="match_parent"
                android:layout_height="211dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffffff" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="滑动折线图" />

            <com.acode.diagram.DiagramView
                android:id="@+id/diagramView"
                android:layout_width="match_parent"
                android:layout_height="211dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffffff" />

            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="更新" />

            <com.acode.diagram.DiagramLineView
                android:id="@+id/diagramLineView"
                android:layout_width="match_parent"
                android:layout_height="211dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffffff" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
